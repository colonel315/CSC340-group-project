@model IEnumerable<CSC340_ordering_sytem.Models.Order>

@{
    ViewBag.Title = "Pending Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("AdminOrdersNav")

@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderNumber)
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderNumber)
                    </td>
                    <td>
                        @item.Customer.GetFullName()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td class="text-right">
                        @using (Html.BeginForm())
                        {
                            <input type="hidden" name="OrderNumber" value="@item.OrderNumber"/>
                            <input type="submit" value="Prepare Order" class="btn btn-sm btn-custom btn-yellow"/>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="text-center">No orders are pending</h3>
}