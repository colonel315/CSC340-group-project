
@model CSC340_ordering_sytem.ViewModels.AuthenticationLoginViewModel

@{
    ViewBag.Title = "Login";
}

    <section class="text-center login">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">
                    <i class="icon-intro"></i>
                    <h1>Login</h1>
                    <span class="welcome ">Login to continue</span>
                    <div class="form-group padding-50">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            if (!ViewData.ModelState.IsValid)
                            {
                                @Html.ValidationSummary(false, "", new {@class = "alert alert-danger"})
                            }

                            @ViewBag.state
                            <!-- Email -->
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email)
                                @Html.TextBoxFor(model => model.Email, new {@class = "form-control", @placeholder = "Email"})
                            </div>

                            <!-- Password -->
                            <div class="form-group">
                                @Html.LabelFor(model => model.Password)
                                @Html.PasswordFor(model => model.Password, new {@class = "form-control", @placeholder = "Password"})
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn form-control btn-black">Login</button>
                        }
                    </div>
                    <div class="forget text-center">
                        <p><a href="register.html">Create an account <i class="fa fa-chevron-circle-right"></i></a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>